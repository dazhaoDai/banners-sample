<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.tools.library.banner.viewpager.BannerViewPager
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:autoPlay="true"
        app:loopDuration="5000"
        app:scrollSpeed="100" />

    <com.tools.library.banner.viewpager.BannerPagerIndicator
        android:id="@+id/pager_indicator"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#11000000"
        app:indicatorHeight="6dp"
        app:indicatorNormalColor="#9FEDEBEB"
        app:indicatorRadius="6dp"
        app:indicatorSelectColor="#ffffff"
        app:indicatorWidth="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/banner" />


</androidx.constraintlayout.widget.ConstraintLayout>